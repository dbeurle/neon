{
    "name" : "Toy cube model",
    "cores" : 2,
    "parts": [{
        "name" : "cube",
        "material" : "rubber"
    }],
    "materials" : [{
        "name" : "rubber",
        "elastic_modulus" : 10.0e6,
        "poissons_ratio" : 0.45,
        "segments_per_chain" : 45
    }],
    "steps" : [{
        "name" : "Load",
        "module" : "solid_mechanics",
        "solution" : "equilibrium",
        "nonlinear_options" : {
            "residual_tolerance" : 1.0e-3,
            "displacement_tolerance" : 1.0e-3
        },
        "time" : {
            "period" : 1.0,
            "increments" : {
                "initial" : 1.0,
                "minimum" : 0.001,
                "maximum" : 1.0,
                "adaptive" : true
            }
        },
        "meshes" : [{
            "name" : "cube",
            "constitutive" : {
                "name" : "microsphere",
                "type" : "affine",
                "statistics" : "gaussian",
                "quadrature" : "BO21"
            },
            "element_options" : {
                "quadrature" : "full"
            },
            "boundaries" : [{
                "name" : "Xsym",
                "type" : "displacement",
                "time" : [0.0, 1.0],
                "x" : [0.0, 0.0]
            },
            {
                "name" : "Ysym",
                "type" : "displacement",
                "time" : [0.0, 1.0],
                "y" : [0.0, 0.0]
            },
            {
                "name" : "Zsym",
                "type" : "displacement",
                "time" : [0.0, 1.0],
                "z" : [0.0, 0.0]
            },
            {
                "name" : "YLoad",
                "type" : "displacement",
                "time" : [0.0, 1.0],
                "z" : [0.0, 0.5]
            }],
            "visualisation" : {
                "fields" : ["displacement", "deformation_gradient", "cauchy_stress"]
            }
        }],
        "linear_solver" : {
            "type" : "iterative",
            "maximum_iterations" : 2000,
            "tolerance"  : 1.0e-8
        }
    }]
}
